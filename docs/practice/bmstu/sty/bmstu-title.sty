% Создание титульной страницы отчета
\newcommand{\makereporttitle}[9]
{
	\documentmeta{Отчет}{#8}{#3 #4}{#5}
	
	\begin{titlepage}
		\centering
		
		\titlepageheader{#1}{#2}
		\vspace{15.8mm}
		
		\titlepagereporttitle{#3}{#4}{#5}{#6}
		\vfill
		
		\titlepageauthors{#7}{#8}{Преподаватель}{#9}{}{}{}
		\vspace{14mm}
		
		{\the\year} г.
	\end{titlepage}
	
	\setcounter{page}{3}
}