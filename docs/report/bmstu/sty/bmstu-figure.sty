% Команда создания рисунка
\newcommand{\putimage}[4]
{
    \begin{figure}[#2]
        \center{\includegraphics[width=#3\columnwidth]{inc/img/#1}}
        \caption{#4}
        \label{fig: #1}
    \end{figure}
}

\newcommand{\figuresvg}[4]
{
    \begin{figure}[#2]
        \centerline{\includesvg[inkscapelatex=false, width=#3\columnwidth]{inc/svg/#1}}
        \caption{#4}
        \label{fig: #1}
    \end{figure}
}



\newcommand{\figuresvgrot}[4]
{
    \begin{sidewaysfigure}[#2]
        \centering
        \includesvg[inkscapelatex=false, width=#3\columnwidth]{inc/svg/#1}
        \caption{#4}
        \label{fig: #1}
    \end{sidewaysfigure}
}

